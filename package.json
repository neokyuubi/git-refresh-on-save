{
  "name": "git-refresh-on-save",
  "displayName": "git-refresh-on-save",
  "description": "Automatically refresh Git status on file save (useful for remote/SSH sessions).",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/neokyuubi/git-refresh-on-save.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "refresh",
    "auto refresh",
    "source control",
    "version control",
    "save",
    "remote",
    "ssh"
  ],
  "activationEvents": [
    "onDidSaveTextDocument"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-refresh-on-save.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
